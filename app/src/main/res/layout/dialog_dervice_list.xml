<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg_dialog"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_dervice_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/for_tv_s"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ble_device"
            android:textColor="#242424"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listview_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CDCDCD"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_Yes"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#00DAB0"
                android:background="@null"
                android:text="@string/sure"
                android:gravity="center"
                />

        </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin_loadering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ProgressBar
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/please_wait"
                android:textSize="15dp"
                android:gravity="center"
                />


        </LinearLayout>




    </LinearLayout>

</LinearLayout>
